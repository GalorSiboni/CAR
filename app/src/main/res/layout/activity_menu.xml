<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF3F2"
    tools:context=".menu">
    <TextView
        android:id="@+id/textMenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#1992f0"
    android:fontFamily="@font/acme"
   android:gravity="center"
    android:text="MENU"
    android:textSize="50sp"
    android:paddingBottom="20dp"
    android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1992f0"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:text="welcome:"
        android:textSize="25dp"
        android:layout_below="@id/textMenu"
        android:textStyle="bold">
    </TextView>

    <Button
        android:id="@+id/scanqr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/greeting"
        android:background="#566C73"
        android:textColor="#FFFF"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/acme"
        android:text="Scan QR Code">
    </Button>


    <Button
        android:id="@+id/showAccident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanqr"
        android:background="#566C73"
        android:textColor="#FFFF"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/acme"
        android:text="Show Accidents">
    </Button>

    <Button
        android:id="@+id/emergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/showAccident"
        android:background="#566C73"
        android:textColor="#FFFF"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/acme"
        android:text="emergency services">
    </Button>

    <ImageView
        android:id="@+id/qrCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="?attr/actionBarDivider"
        android:layout_below="@id/emergency"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>