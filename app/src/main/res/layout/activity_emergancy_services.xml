<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyServices">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/red">

        <RelativeLayout
            android:id="@+id/toolBarIcons"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/home_btn">
            </ImageView>

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/homeIcon"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:background="@drawable/profile_btn"
                android:layout_toEndOf="@id/homeIcon">
            </ImageView>

            <ImageView
                android:id="@+id/logOutIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:layout_toRightOf="@id/profileIcon"
                android:background="@drawable/exit_btn"
                android:layout_toEndOf="@id/profileIcon">
            </ImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/pageLabel"
            android:layout_below="@+id/toolBarIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFF"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:text="@string/emergency_services_headline"
            android:textSize="40sp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fixToPlaceBelow"
        android:layout_width="match_parent"
        android:layout_height="120dp">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/icons"
        android:layout_below="@+id/fixToPlaceBelow"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/police"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/police_icon"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_background_orange">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/police_emergency_services">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/lightGray"
                    android:layout_margin="5dp">
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/call_to_the_police_emergency_dispatch_center">
                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/mada"
            android:layout_toRightOf="@id/police"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/police">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/mada_icon"
                    android:padding="10dp"
                    android:background="@drawable/circle_background_orange">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/mada_emergency_services">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/lightGray"
                    android:layout_margin="5dp">
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/call_to_the_mada_emergency_dispatch_center">
                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/fireFighters"
            android:layout_toRightOf="@id/mada"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/mada">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/fire_icon"
                    android:padding="10dp"
                    android:background="@drawable/circle_background_orange">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/fire_fighters_emergency_services">
                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/lightGray"
                    android:layout_margin="5dp">
                </View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/call_to_the_fire_emergency_dispatch_center">
                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>